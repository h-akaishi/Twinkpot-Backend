<main class="session-main">
  <div class="session-contents">
    <%= link_to root_path do %><h2 class="logo-face">Twinkpot</h2><% end %>
    <div class="form-erea">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
          <div class="email-field">
            <%= f.email_field :email, autofocus: true, placeholder: 'メールアドレス', 'v-model': 'user.mail' %>
          </div>
          <div class="password-field">
            <%= f.password_field :password, placeholder: "パスワード(#{@minimum_password_length}文字以上)", autocomplete: "off" %>
          </div>
          <div class="password-field">
            <%= f.password_field :password_confirmation, placeholder: 'パスワード(確認用)', autocomplete: "off" %>
          </div>
          <div class="text-field">
            <%= f.text_field :user_name, placeholder: 'ユーザ名(半角英数字)', autocomplete: "off" %>
          </div>
          <div class="button-actions">
            <%= f.submit 'アカウント作成' %>
          </div>
      <% end %>
      <p class="agree-text">アカウントを作成すると、利用規約、およびCookieの使用を含むプライバシーポリシーに同意したことになります。</p>
      <%= render "users/shared/links" %>
    </div>
  </div>
</main>
<%= javascript_pack_tag 'forms/registration' %>
